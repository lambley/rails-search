<div class="search">
  <%= form_tag pokemons_path, method: :get, class: "search" do %>
    <%=
      text_field_tag :query,
      params[:query],
      class: "search-field",
      placeholder: "Find a pokemon"
    %>
    <%= submit_tag "Search", class: "search-button" %>
  <% end %>
</div>

<div class="pokemon-index">
  <% @pokemons.each do |p| %>
    <%= render 'pokemons/card', pokemon: p %>
  <% end %>
</div>
